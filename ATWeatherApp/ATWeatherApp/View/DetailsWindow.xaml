<Window x:Class="ATWeatherApp.View.DetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ATWeatherApp.View"
        mc:Ignorable="d"
        Title="Details" Height="400
        " Width="650" Background="Black">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <TextBlock Text="Weather Forecast" FontSize="20" FontWeight="Bold" Margin="10" Foreground="White"/>

        <ListView Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image x:Name="img" Stretch="UniformToFill"/>
        </ListView>
    </Grid>
</Window>
